---
import Icon from "astro-iconify";

interface Props {
  title: string;
  description: string;
  problem?: string;
  solution?: string;
  impact?: string;
  demo_url: string;
  technologies: string[];
  image: string;
  label: string;
}

const { 
  title, 
  description, 
  problem,
  solution,
  impact,
  demo_url, 
  technologies, 
  image, 
  label 
} = Astro.props;
---

<div class="project-card group scroll-reveal">
  <a
    class="block relative overflow-hidden rounded-2xl bg-white/5 border border-white/10 transition-all duration-500 hover:border-white/20 hover:scale-[1.02] hover:shadow-2xl hover:shadow-cyan-500/20"
    target="_blank"
    href={demo_url}
    rel="noopener noreferrer"
    aria-label={label}
  >
    <!-- Image -->
    <div class="relative overflow-hidden aspect-video">
      <img
        class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110 group-hover:brightness-50"
        src={image}
        alt={title}
        loading="lazy"
      />
      
      <!-- Gradient overlay on hover -->
      <div class="absolute inset-0 bg-linear-to-t from-gray-900 via-gray-900/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
    </div>

    <!-- Content -->
    <div class="p-6">
      <!-- Title -->
      <h3 class="text-2xl md:text-3xl font-black text-gray-900 dark:text-white mb-3 group-hover:gradient-accent group-hover:bg-clip-text group-hover:text-transparent transition-all duration-300">
        {title}
      </h3>

      <!-- Description -->
      <p class="text-sm md:text-base text-gray-700 dark:text-gray-300 mb-4 normal-case leading-relaxed font-sans line-clamp-2">
        {description}
      </p>

      <!-- Technologies -->
      <div class="flex flex-wrap gap-2 mb-4">
        {technologies.slice(0, 4).map(tech => (
          <span class="px-3 py-1 text-xs rounded-full bg-white/10 border border-white/20 text-gray-300 hover:bg-white/20 transition-colors uppercase">
            {tech}
          </span>
        ))}
      </div>

      <!-- Storytelling Section (visible on hover) -->
      {(problem || solution || impact) && (
        <div class="absolute inset-0 bg-gray-900/95 backdrop-blur-sm p-6 opacity-0 group-hover:opacity-100 transition-all duration-500 flex flex-col justify-center overflow-y-auto">
          <h4 class="text-xl md:text-2xl font-black gradient-accent bg-clip-text text-transparent mb-6">
            {title}
          </h4>

          {problem && (
            <div class="mb-4">
              <div class="flex items-center gap-2 mb-2">
                <Icon name="mdi:alert-circle" class="text-orange-500 text-xl shrink-0" />
                <h5 class="text-sm font-bold text-orange-500 uppercase">The Challenge</h5>
              </div>
              <p class="text-sm text-gray-300 normal-case leading-relaxed font-sans">
                {problem}
              </p>
            </div>
          )}

          {solution && (
            <div class="mb-4">
              <div class="flex items-center gap-2 mb-2">
                <Icon name="mdi:lightbulb" class="text-cyan-500 text-xl shrink-0" />
                <h5 class="text-sm font-bold text-cyan-500 uppercase">The Solution</h5>
              </div>
              <p class="text-sm text-gray-300 normal-case leading-relaxed font-sans">
                {solution}
              </p>
            </div>
          )}

          {impact && (
            <div class="mb-4">
              <div class="flex items-center gap-2 mb-2">
                <Icon name="mdi:chart-line" class="text-green-500 text-xl shrink-0" />
                <h5 class="text-sm font-bold text-green-500 uppercase">The Impact</h5>
              </div>
              <p class="text-sm text-gray-300 normal-case leading-relaxed font-sans">
                {impact}
              </p>
            </div>
          )}

          <!-- CTA -->
          <div class="mt-auto pt-4">
            <span class="inline-flex items-center gap-2 text-sm font-bold gradient-accent bg-clip-text text-transparent uppercase">
              View Live Demo
              <Icon name="mdi:arrow-right" class="text-cyan-500" />
            </span>
          </div>
        </div>
      )}
    </div>
  </a>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
