---
interface Props {
  customClass?: string;
  id?: string;
}

const { customClass = "", id } = Astro.props;
---

<div
  id={id}
  class={`p-6 rounded-xl border transition-all duration-300 ease-in-out 
          bg-white/5 backdrop-blur-md border-white/10 
          hover:bg-white/10 hover:border-indigo-400/30 
          hover:-translate-y-1 hover:shadow-[0_8px_32px_rgba(99,102,241,0.15)] ${customClass}`}
>
  <slot />
</div>
