---
import CardGlassBase from "./base/CardGlassBase.astro";

interface Props {
  value: string;
  label: string;
  gradient: string;
}

const { value, label, gradient } = Astro.props;
---

<CardGlassBase customClass="stats-card">
  <div class={`text-3xl font-bold ${gradient} bg-clip-text text-transparent`}>
    {value}
  </div>
  <div class="text-sm text-gray-400 mt-1">{label}</div>
</CardGlassBase>
