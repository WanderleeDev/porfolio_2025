---
import Icon from "astro-iconify";

interface Props {
  name: string;
  url: string;
  icon: string;
  design?: "default" | "simple";
}

const { name, url, icon, design = "default" } = Astro.props;
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  aria-label={name}
  class="group flex items-center gap-4 px-5 py-3 rounded-lg border border-neutral-700 text-neutral-400 hover:text-white hover:border-neutral-500 hover:bg-neutral-800/30 transition-all duration-300"
>
  <Icon
    name={icon}
    class="w-5 h-5 transition-transform duration-300 group-hover:scale-110 pointer-events-none"
  />
  {
    design === "default" ? (
      <span class="text-sm font-medium tracking-wide pointer-events-none">
        {name}
      </span>
    ) : (
      <span class="sr-only">{name}</span>
    )
  }
</a>
