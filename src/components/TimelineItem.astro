---
interface Props {
  year: string;
  title: string;
  description: string;
  icon: string;
  technologies?: string[];
  isLast?: boolean;
}

const {
  year,
  title,
  description,
  icon,
  technologies = [],
  isLast = false,
} = Astro.props;
---

<div class="timeline-item scroll-reveal flex gap-6 md:gap-8 relative">
  <!-- Timeline line -->
  {
    !isLast && (
      <div class="absolute left-6 md:left-8 top-16 bottom-0 w-0.5 bg-linear-to-b from-cyan-500/50 via-purple-500/50 to-orange-500/50" />
    )
  }

  <!-- Icon circle -->
  <div class="shrink-0 relative z-10">
    <div
      class="size-12 md:size-16 rounded-full bg-linear-to-br from-cyan-500 via-purple-500 to-orange-500 p-[2px]"
    >
      <div
        class="size-full rounded-full bg-gray-900 dark:bg-gray-950 flex items-center justify-center"
      >
        <span class="text-2xl md:text-3xl">{icon}</span>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="flex-1 pb-12">
    <div
      class="bg-white/5 dark:bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl p-6 hover:border-white/20 transition-all duration-300 hover:scale-[1.02]"
    >
      <div class="flex items-center gap-3 mb-3">
        <span
          class="text-sm md:text-base font-bold gradient-accent bg-clip-text text-transparent uppercase"
        >
          {year}
        </span>
      </div>

      <h3
        class="text-xl md:text-2xl font-black text-gray-900 dark:text-white mb-3"
      >
        {title}
      </h3>

      <p
        class="text-sm md:text-base text-gray-700 dark:text-gray-300 mb-4 normal-case leading-relaxed font-sans"
      >
        {description}
      </p>

      {
        technologies.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {technologies.map((tech) => (
              <span class="px-3 py-1 text-xs rounded-full bg-white/10 border border-white/20 text-gray-300 hover:bg-white/20 transition-colors">
                {tech}
              </span>
            ))}
          </div>
        )
      }
    </div>
  </div>
</div>
